include ../../common
include ../../components/panel/panel

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Toxin range slider
    +favicon       
    link(href="jquery-plugins/toxin-rangeslider/toxin-rangeslider.css" rel="stylesheet")         
    link(href="index.css" rel="stylesheet")         
    //-script(type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js")

  body
    ul.panels
      li.panels__column1-1
        +panel({id:'p1', 
      slider: { isVertical: false, isTwoHandles: true, isTip: true,
      minValue: 2, maxValue: 1024, stepValue: 0, valueFrom: 2, valueTo: 7, 
      items: {indexFrom: 2, indexTo: 7, values: [2, 4, 8, 16, 32, 64, 128, 256, 512, 1024]} } 
      })
