        +panel({id:'p2', 
      slider: { isVertical: false, isTwoHandles: true, isTip: true,
      minValue: 0, maxValue: 1220, stepValue: 100,
      valueFrom: 0, valueTo: 1220 }
      })
      li.panels__column1-3
        +panel({id:'p3', 
        slider: { isVertical: false, isTwoHandles: true, isTip: true,
        minValue: 0, maxValue: 1200, stepValue: 0, valueFrom: 2, valueTo: 8,  
